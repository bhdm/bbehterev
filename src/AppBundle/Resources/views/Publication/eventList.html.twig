{% extends 'AppBundle::layout.html.twig' %}

{% block content %}
    <h1 class="blue-text">{{ type.title }}</h1>
    <div>
        {% for p in events %}
            <div class="new-item">
                <span style="color: #444; font-size: 12px">{{ p.created | date('d.m.Y') }}</span><br />
                <a href="{{ path('event', {'url' : p.id }) }}"><div class="new-item-title">{{ p.title }}</div></a>
                <div class="new-item-anons">
                    {{ p.body | anons | raw }}
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}